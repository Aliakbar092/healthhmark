<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Livestock Marketplace</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 0px; /* Adjust if header height changes */
        }
        header {
            background-color: white;
            color: black;
        }
        footer {
            background-color: #0080ff;
        }
        .card-img-top {
            height: 180px;
            object-fit: cover;
        }
        .modal-body img {
            max-width: 100%;
            height: auto;
        }
        .cart-item-count {
            position: absolute;
            top: -10px;
            right: -10px;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
        }
        .cart-item {
            border-bottom: 1px solid black;
            padding: 10px 0;
        }
        .cart-item img {
            height: 60px;
            object-fit: cover;
        }
        .btn{
            margin-bottom: 7px;
        }
        /* Ensure the buttons are vertically aligned */
.ml-auto .btn {
    margin-bottom: 0;
}
.container{
    color: black;
}
.btn{
    color: black;
    border: 1px solid rgb(41, 40, 40);
}
.row{
   flex-wrap: wrap;
}

    </style>
</head>
<body>

<!-- Header -->
<header class="bg-custom text-white p-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3">Livestock Marketplace</h1>
            <div class="ml-auto d-flex align-items-center">
                <!-- <button class="btn btn-outline-light mr-2" data-toggle="modal" data-target="#searchModal">Search</button> -->
               <!-- Search Button -->
               <button class="btn btn-outline-light mr-2" data-toggle="modal" data-target="#searchModal">
                <i class="fas fa-search"></i> Search
            </button>
                <a href="cart" class="btn btn-outline-light position-relative">
                    <i class="fas fa-shopping-cart"></i>
                    <span id="cartCount" class="cart-item-count">0</span>
                </a>
            </div>
        </div>
    </div>
</header>



<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Search Animals</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="searchForm" action="/search" method="GET">
                    <div class="form-group">
                        <label for="searchName">Name</label>
                        <input type="text" class="form-control" name="name" id="searchName" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="searchBreed">Breed</label>
                        <input type="text" class="form-control" name="breed" id="searchBreed" placeholder="Enter breed">
                    </div>
                    <div class="form-group">
                        <label for="searchAge">Age</label>
                        <input type="number" class="form-control" name="age" id="searchAge" placeholder="Enter age">
                    </div>
                    <div class="form-group">
                        <label for="searchColor">Color</label>
                        <input type="text" class="form-control" name="color" id="searchColor" placeholder="Enter color">
                    </div>
                    <div class="form-group">
                        <label for="searchPrice">Price</label>
                        <input type="number" class="form-control" name="price" id="searchPrice" placeholder="Enter max price">
                    </div>
                    <div class="form-group">
                        <label for="searchLocation">Location</label>
                        <input type="text" class="form-control" name="location" id="searchLocation" placeholder="Enter location">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            
        </div>
    </div>
</div>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="index.html">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="about us.html">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="contact us.html">Contact</a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link" href="#">Seller Dashboard</a>
                </li> -->
                <li class="nav-item">
                    <a class="nav-link" href="terms and conditions.html">Terms & Conditions</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<!-- Main Content -->
<main class="container my-4">
    <div class="row">        
        <!-- Listings -->
        <aside class="col-md-3">
            <h5>Filters</h5>
            <form id="filtersForm">
                <div class="form-group">
                    <label for="animalType">Animal Type</label>
                    <select id="animalType" class="form-control">
                        <option value="">All</option>
                        <option value="Cattle">Cattle</option>
                        <option value="Poultry">Poultry</option>
                        <option value="Sheep">Sheep</option>
                        <option value="Goats">Goats</option>
                        <option value="Horses">Horses</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="animalBreed">Breed</label>
                    <select id="animalBreed" class="form-control">
                        <option value="">All</option>
                        <option value="Angus">Angus</option>
                        <option value="Broiler">Broiler</option>
                        <option value="Dorset">Dorset</option>
                        <option value="Nubian">Nubian</option>
                        <option value="Arabian">Arabian</option>
                        <option value="Layer">Layer</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="colorFilter">Color</label>
                    <select id="colorFilter" class="form-control">
                        <option value="">All</option>
                        <option value="Black">Black</option>
                        <option value="White">White</option>
                        <option value="Brown">Brown</option>
                        <option value="Gray">Gray</option>
                        <option value="Spotted">Spotted</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ageRange">Age Range</label>
                    <select id="ageRange" class="form-control">
                        <option value="">All</option>
                        <option value="0-12 months">0-12 months</option>
                        <option value="1-2 years">1-2 years</option>
                        <option value="2-3 years">2-3 years</option>
                        <option value="3-5 years">3-5 years</option>
                        <option value="5+ years">5+ years</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="priceRange">Price Range</label>
                    <input type="range" class="form-control-range" id="priceRange" min="0" max="100000" step="100"
                        value="5000" onchange="updatePriceLabel()">
                    <small id="priceLabel" class="form-text text-muted">Up to $100000</small>
                </div>
                <button type="button" class="btn btn-primary" onclick="applyFilters()">Apply Filters</button>
            </form>
        </aside>
        <section class="col-md-9">
            <div class="row" id="animalList">
                <!-- Animal Cards -->
                
                <% animals.forEach(animal => { %>
                <div class="col-md-4 mb-4 animal-card" data-type="Cattle" data-breed="Angus" data-color="Brown"
                data-price="1200">
                <div class="card">
                            
                        <img src="<%= animal.image %>" class="card-img-top" alt="Animal Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= animal.name %></h5>
                            <p class="card-text">Breed: <%= animal.breed %><br>
                                Age: <%= animal.age %> years<br>
                                Price: $<%= animal.price %><br>
                                Color: <%= animal.color %> <br>
                                Location: <%= animal.location %></p>
                            <button class="btn btn-primary"
                                onclick="addToCart('Angus Cattle', 1200, 'https://via.placeholder.com/300?text=Animal+1')">Add
                                to Cart</button>
                            <a href="#" class="btn btn-secondary" data-toggle="modal" data-target="#listingModal"
                                data-title="Angus Cattle" data-breed="Angus" data-age="3 years" data-price="1200"
                                data-location="Farmville" data-color="Brown">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                
                
            </div>
        </section>
    </div>
</main>



<!-- Modal for Listing Details -->
<div class="modal fade" id="listingModal" tabindex="-1" role="dialog" aria-labelledby="listingModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="listingModalLabel">Animal Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="https://via.placeholder.com/500" class="img-fluid mb-3" alt="Animal Image">
                <p>Breed: <span id="modalBreed"></span></p>
                <p>Age: <span id="modalAge"></span></p>
                <p>Health Status: Good</p>
                <p>Special Traits: Friendly and healthy</p>
                <p>Price: $<span id="modalPrice"></span></p>
                <p>Location: <span id="modalLocation"></span></p>
                <button class="btn btn-primary" onclick="addToCart($('#listingModalLabel').text(), parseFloat($('#modalPrice').text()), 'https://via.placeholder.com/500')">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3">
    <p>&copy; 2024 Livestock Marketplace. All Rights Reserved.</p>
    <p>
        <a href="#" class="text-light">Privacy Policy</a> | 
        <a href="#" class="text-light">Terms of Service</a> |
        <a href="#" class="text-light">FAQs</a>
    </p>
</footer>

<!-- Bootstrap JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- Font Awesome for Cart Icon -->

<script>
    let cart = JSON.parse(localStorage.getItem('cart')) || [];

    
function performSearch() {
    // Get values from the search form
    let name = document.getElementById('searchName').value.toLowerCase();
    let breed = document.getElementById('searchBreed').value.toLowerCase();
    let age = document.getElementById('searchAge').value.toLowerCase();
    let price = parseFloat(document.getElementById('searchPrice').value);

    // Get all animal cards
    let cards = document.querySelectorAll('.animal-card');

    cards.forEach(card => {
        let cardTitle = card.querySelector('.card-title').textContent.toLowerCase();
        let cardBreed = card.querySelector('.card-text').textContent.toLowerCase();
        let cardAge = card.querySelector('.card-text').textContent.toLowerCase();
        let cardPrice = parseFloat(card.getAttribute('data-price'));

        // Check if the card matches the search criteria
        let matches = 
            (name === '' || cardTitle.includes(name)) &&
            (breed === '' || cardBreed.includes(breed)) &&
            (age === '' || cardAge.includes(age)) &&
            (isNaN(price) || cardPrice <= price);

        // Show or hide the card based on matches
        card.style.display = matches ? '' : 'none';
    });

    // Close the modal
    $('#searchModal').modal('hide');
}

    function updatePriceLabel() {
        let priceRange = document.getElementById('priceRange');
        let priceLabel = document.getElementById('priceLabel');
        priceLabel.textContent = `Up to $${priceRange.value}`;
    }

    function applyFilters() {
            let typeFilter = document.getElementById('animalType').value;
            let breedFilter = document.getElementById('animalBreed').value;
            let colorFilter = document.getElementById('colorFilter').value;
            let priceFilter = document.getElementById('priceRange').value;
            let cards = document.querySelectorAll('.animal-card');

            cards.forEach(card => {
                let type = card.getAttribute('data-type');
                let breed = card.getAttribute('data-breed');
                let color = card.getAttribute('data-color');
                let price = parseInt(card.getAttribute('data-price'), 10);

                // Apply filters
                let isTypeMatch = (typeFilter === '' || type === typeFilter);
                let isBreedMatch = (breedFilter === '' || breed === breedFilter);
                let isColorMatch = (colorFilter === '' || color === colorFilter);
                let isPriceMatch = price <= priceFilter;

                // Show or hide the card based on matches
                card.style.display = (isTypeMatch && isBreedMatch && isColorMatch && isPriceMatch) ? '' : 'none';
            });
        }


    function addToCart(name, price, imageUrl) {
        let item = { name, price, imageUrl };
        cart.push(item);
        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartCount();
    }

    function updateCartCount() {
        document.getElementById('cartCount').textContent = cart.length;
    }

    function updateCart() {
        let cartItemsDiv = document.getElementById('cartItems');
        let totalPrice = 0;

        if (cart.length === 0) {
            cartItemsDiv.innerHTML = '<p>Your cart is empty.</p>';
        } else {
            cartItemsDiv.innerHTML = cart.map(item => `
                <div class="cart-item d-flex justify-content-between align-items-center">
                    <img src="${item.imageUrl}" alt="${item.name}">
                    <span>${item.name}</span>
                    <span>$${item.price.toFixed(2)}</span>
                </div>
            `).join('');
            totalPrice = cart.reduce((total, item) => total + item.price, 0);
        }

        document.getElementById('totalPrice').textContent = totalPrice.toFixed(2);
    }

    $(document).ready(function () {
        updateCart();
        updateCartCount();
    });

    $('#listingModal').on('show.bs.modal', function (event) {
        let button = $(event.relatedTarget);
        let title = button.data('title');
        let breed = button.data('breed');
        let age = button.data('age');
        let price = button.data('price');
        let location = button.data('location');

        let modal = $(this);
        modal.find('.modal-title').text(title);
        modal.find('#modalBreed').text(breed);
        modal.find('#modalAge').text(age);
        modal.find('#modalPrice').text(price);
        modal.find('#modalLocation').text(location);
    });

    
    function updatePriceLabel() {
        const priceRange = document.getElementById('priceRange').value;
        document.getElementById('priceLabel').innerText = `Up to $${priceRange}`;
    }

</script>

</body>
</html>
